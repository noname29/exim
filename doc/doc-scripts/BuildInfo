#! /bin/sh

if [ "$1" = "filter" ]; then
g2t -filter filter.src >filter.texinfo
if [ $? != 0 ]; then exit 1; fi
cd info
makeinfo filter.texinfo
if [ $? != 0 ]; then exit 1; fi
echo ""
echo info filter.info
echo ""
info -f ./filter.info
exit
fi

if [ "$1" = "" ]; then
g2t spec.src >spec.texinfo
if [ $? != 0 ]; then exit 1; fi
cd info
makeinfo spec.texinfo
if [ $? != 0 ]; then exit 1; fi
echo ""
echo info spec.info
echo ""
info -f ./spec.info
exit
fi

echo "***Usage: null or filter argument required"

####
