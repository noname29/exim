#!/bin/sh -eu

okay=false
# if [ -d ../../release-process ] && [ "${PWD##*/}" = "pkgs" ]; then
# 	okay=true # we are in right dir
# elif [ -d release-process ]; then
# 	b="$(find . -maxdepth 1 -name 'exim-packaging-*' | sort | tail -n 1)"
# 	if [ ".$b" != "." ]; then
# 		cd "$b/pkgs"
